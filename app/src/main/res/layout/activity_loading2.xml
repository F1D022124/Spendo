<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0047AB"
    tools:context=".Loading2">

    <!-- Header Biru Tua -->
    <LinearLayout
        android:id="@+id/Llload2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#0047AB"
        android:padding="60dp"
        app:layout_constraintTop_toTopOf="parent" >

        <TextView
            android:id="@+id/tvload2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Are You Ready To Take Control Your Finances?"
            android:textAlignment="center"
            android:textColor="#E3F2FD"
            android:textSize="20sp"
            android:fontFamily="@font/poppins_bold"
            android:layout_marginTop="16dp" />
    </LinearLayout>

    <!-- Footer Rounded -->
    <LinearLayout
        android:id="@+id/footerLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/babyblue"
        android:orientation="vertical"
        android:padding="24dp"
        app:layout_constraintTop_toBottomOf="@id/Llload2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Contoh konten -->
        <ImageView
            android:id="@+id/ivload2"
            android:layout_width="248dp"
            android:layout_height="230dp"
            android:layout_gravity="center"
            android:src="@drawable/lload1" />


        <Button
            android:id="@+id/btnNext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Next"
            android:backgroundTint="#F4A300"
            android:textColor="#0047AB"
            android:layout_marginTop="16dp" />
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>