<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E3F2FD"
    tools:context=".Rekomendasi2">

    <LinearLayout
        android:id="@+id/headerLayout6"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="#2196F3"
        android:padding="16dp"
        android:orientation="horizontal"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/ivback"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/baseline_arrow_back_ios_new_24"
            android:contentDescription="Back"
            android:layout_gravity="center_vertical" />

        <TextView
            android:id="@+id/tvtithitung2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Recomendation Result"
            android:textColor="#FFFFFF"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_marginStart="8dp"
            android:layout_gravity="center_vertical" />
    </LinearLayout>

    <!-- Kontainer hasil -->
    <LinearLayout
        android:id="@+id/formLayout7"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:background="@drawable/putih"
        android:orientation="vertical"
        android:padding="24dp"
        app:layout_constraintTop_toBottomOf="@id/headerLayout6"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/ivtahan"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_gravity="center"
            android:src="@mipmap/ic_dollar" />

        <TextView
            android:id="@+id/tvtahan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:gravity="center"
            android:text="Looks like a smart purchase!\Just hold on a bit - your wallet needs a breather"
            android:fontFamily="@font/poppins_semibold"
            android:textColor="#0047AB"
            android:textSize="18sp"
            android:lineSpacingExtra="4dp" />
    </LinearLayout>

    <!-- Tombol Coba Lagi -->
    <Button
        android:id="@+id/btncblg"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Try Again"
        android:fontFamily="@font/poppins_bold"
        android:textColor="#0047AB"
        android:textSize="16sp"
        android:backgroundTint="#F4A300"
        app:layout_constraintTop_toBottomOf="@id/formLayout7"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp" />

    <!-- Tombol Kembali -->
    <Button
        android:id="@+id/btnbkmenu"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Back to Menu"
        android:fontFamily="@font/poppins_bold"
        android:textColor="#0047AB"
        android:textSize="16sp"
        android:backgroundTint="#F4A300"
        app:layout_constraintTop_toBottomOf="@id/btncblg"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp" />

    <LinearLayout
        android:id="@+id/footerLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/footer"
        android:padding="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/ivhome"
            android:layout_width="0dp"
            android:layout_height="32dp"
            android:layout_weight="1"
            android:src="@drawable/menu5"
            android:layout_gravity="center"
            android:contentDescription="Home" />

        <ImageView
            android:id="@+id/ivinput"
            android:layout_width="0dp"
            android:layout_height="32dp"
            android:layout_weight="1"
            android:src="@drawable/menu4"
            android:layout_gravity="center"
            android:contentDescription="Input" />

        <ImageView
            android:id="@+id/ivlight"
            android:layout_width="0dp"
            android:layout_height="32dp"
            android:layout_weight="1"
            android:src="@drawable/menu3"
            android:layout_gravity="center"
            android:contentDescription="Light" />

        <ImageView
            android:id="@+id/ivclock"
            android:layout_width="0dp"
            android:layout_height="32dp"
            android:layout_weight="1"
            android:src="@drawable/menu2"
            android:layout_gravity="center"
            android:contentDescription="Clock" />

        <ImageView
            android:id="@+id/ivuser"
            android:layout_width="0dp"
            android:layout_height="32dp"
            android:layout_weight="1"
            android:src="@drawable/menu1"
            android:layout_gravity="center"
            android:contentDescription="User" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>